{
  "name": "generator-example",
  "version": "1.0.0-SNAPSHOT",
  "description": "generator-example",
  "license": "MIT",
  "repository": "",
  "keywords": [
    "express-ts"
  ],
  "files": [
    "lib",
	"bundle"
  ],
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "scripts": {
    "start": "node lib/server.js",
    "start:bundle": "node bundle/server.js",
    "start:dev": "nodemon",
    "clean": "rimraf lib && rimraf coverage",
    "clean:bundle":"rimraf bundle && rimraf coverage",
    "format": "prettier --write \"{src,__tests__}/**/*.ts\" --single-quote --trailing-comma es5",
    "lint": "tslint --force --format verbose \"src/**/*.ts\"",
    "prepublishOnly": "npm run build:bundle",
    "prebuild": "npm run clean && npm run format && npm run lint && echo Using TypeScript && tsc --version",
    "build:bundle": "npm run build && npm run clean:bundle && webpack --config webpack.config.js && npm run copy-env:bundle && npm run clean",
    "build": "tsc --pretty && npm run copy:env",
    "build:only": "tsc --pretty && npm run copy:env",
    "copy:env": "cpx  \"src/**/*.env\"  lib -C -p  && cd lib && cd .. ",
    "copy-env:bundle": "cpx  \"src/**/*.env\"  bundle -C -p  && cd bundle && cd .. ",
    "test": "jest",
    "coverage": "jest --coverage",
    "watch": "npm run build -- --watch",
    "watch:test": "jest --watch"
  },
  "dependencies": {
    "body-parser": "1.17.0",
    "dotenv": "6.2.0",
    "express": "4.16.1"
  },
  "devDependencies": {
    "@types/body-parser": "1.17.0",
    "@types/dotenv": "6.1.0",
    "@types/express": "4.16.1",
    "@types/jest": "24.0.6",
    "@types/node": "10.12.27",
    "cpx": "1.5.0",
    "jest": "24.1.0",
    "nodemon": "1.18.10",
    "prettier": "1.16.4",
    "rimraf": "2.6.3",
    "ts-jest": "24.0.0",
    "ts-node": "8.0.2",
    "tslint": "5.13.0",
    "tslint-config-prettier": "1.18.0",
    "typescript": "3.3.1",
    "webpack": "4.29.6",
    "webpack-cli": "3.2.3"
  },
  "engines": {
    "node": ">=8.9.0 || >= 10.13.0"
  },
  "jest": {
    "transform": {
      ".(ts)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|js)$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "testEnvironment": "node"
  }
}
